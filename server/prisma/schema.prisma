generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nombre    String
  email     String   @unique
  createdAt DateTime @default(now())
  turnos    Turno[]
}

model Turno {
  id        Int      @id @default(autoincrement())
  inicio    DateTime
  motivo    String?
  usuarioId Int
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
  createdAt DateTime @default(now())

  @@unique([inicio])
  @@index([usuarioId])
}